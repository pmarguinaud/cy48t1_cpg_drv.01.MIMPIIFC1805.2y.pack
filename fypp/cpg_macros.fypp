SUBROUTINE ${name}$_INIT (SELF &
#:if use_llt0
                                & , KT  &
#:endif
                                & , REGISTRY &
#:if use_cpg_dim
                                & , YDCPG_DIM &
#:else
                                & , NLEV &
#:endif
                                & , PERSISTENT &
#:if use_yddphy
                                & , YDDPHY &
#:endif
#:if use_ydsurf
                                & , YDSURF &
#:endif
#:if use_ydmodel
                                & , YDMODEL &
#:endif
#:if use_llmf_phys
                                & , LDMF_PHYS &
#:endif
#:for var in vars
  #:if vars[var][ISARG]
                           &, ${argn (var)}$ &
  #:endif
#:endfor
                           &)

#:if use_intdyn
USE INTDYN_MOD, ONLY : YYTCTY0, YYTRCP0, YYTHW0, YYTXYB0, YYTXYB0_PHY, YYTXYBDER0
USE INTDYN_MOD, ONLY :          YYTRCP9, YYTHW9, YYTXYB9, YYTXYB9_PHY
USE INTDYN_MOD, ONLY : TRCP, TCTY, THWIND, TXYB, TXYBDER
#:endif

#:if use_cpg_dim
USE CPG_DIM_TYPE_MOD, ONLY : CPG_DIM_TYPE
#:set nlev = "YDCPG_DIM%KFLEVG"
#:else
#:set nlev = "NLEV"
#:endif

#:if use_lnhdyn
USE YOMCT0    , ONLY : LNHDYN, LNHEE, LNHQE
#:endif
#:if use_ydmodel
USE TYPE_MODEL, ONLY : MODEL
#:endif
#:if use_yddphy
USE YOMDPHY, ONLY : TDPHY
#:endif
#:if use_ydsurf
USE SURFACE_FIELDS_MIX, ONLY : TSURF
#:endif

CLASS (${name}$)                    :: SELF
#:if use_llt0
INTEGER(KIND=JPIM),           INTENT (IN)    :: KT
#:endif
TYPE (FIELD_REGISTRY),        INTENT (INOUT) :: REGISTRY
#:if use_cpg_dim
TYPE (CPG_DIM_TYPE),          INTENT (IN)    :: YDCPG_DIM
#:else
INTEGER (KIND=JPIM),          INTENT (IN)    :: NLEV
#:endif
LOGICAL, OPTIONAL,            INTENT (IN)    :: PERSISTENT
#:if use_ydmodel
TYPE (MODEL),                 INTENT (IN)    :: YDMODEL
#:endif
#:if use_yddphy
TYPE (TDPHY),                 INTENT (IN)    :: YDDPHY
#:endif
#:if use_ydsurf
TYPE (TSURF),                 INTENT (IN)    :: YDSURF
#:endif
#:if use_llmf_phys
LOGICAL, OPTIONAL,            INTENT (IN)    :: LDMF_PHYS
#:endif

#:for var in vars
  #:if vars[var][ISARG]
    #:set ndim = 1 + len (vars[var][NDIMS]) + 1
REAL(KIND=JPRB),       INTENT (IN), OPTIONAL, TARGET  :: ${argn (var)}$(${", ".join ([":"] * ndim)}$)
  #:endif
#:endfor

#:if use_llt0
LOGICAL :: LLT0
#:endif
#:if use_llmf_phys
LOGICAL :: LLMF_PHYS
#:endif

#:if use_intdyn
TYPE (TRCP)   , POINTER :: YLTRCP     
TYPE (TCTY)   , POINTER :: YLTCTY     
TYPE (THWIND) , POINTER :: YLTHW     
TYPE (TXYB)   , POINTER :: YLTXYB     
TYPE (TXYB)   , POINTER :: YLTXYB_PHY
TYPE (TXYBDER), POINTER :: YLTXYBDER

TYPE (TCTY),   TARGET :: YLTCTY0 
TYPE (THWIND), TARGET :: YLTHW0, YLTHW9 
TYPE (TRCP),   TARGET :: YLTRCP0, YLTRCP9 
TYPE (TXYB),   TARGET :: YLTXYB0, YLTXYB0_PHY, YLTXYB9, YLTXYB9_PHY
TYPE (TXYBDER),TARGET :: YLTXYBDER0

YLTCTY0     = YYTCTY0 
YLTHW0      = YYTHW0 
YLTHW9      = YYTHW9 
YLTRCP0     = YYTRCP0 
YLTRCP9     = YYTRCP9 
YLTXYB0     = YYTXYB0 
YLTXYB0_PHY = YYTXYB0_PHY 
YLTXYB9     = YYTXYB9 
YLTXYB9_PHY = YYTXYB9_PHY
YLTXYBDER0  = YYTXYBDER0
#:endif

#:if use_llt0
LLT0 = KT == 0
#:endif

#:if use_intdyn
YLTRCP     => NULL ()
YLTCTY     => NULL ()
YLTHW      => NULL ()
YLTXYB     => NULL ()
YLTXYB_PHY => NULL ()
YLTXYBDER  => NULL ()

IF (KT == 0) THEN
  YLTRCP     => YLTRCP0
  YLTCTY     => YLTCTY0
  YLTHW      => YLTHW0
  YLTXYB     => YLTXYB0
  YLTXYB_PHY => YLTXYB0_PHY
  YLTXYBDER  => YLTXYBDER0
ELSEIF (KT == 9) THEN
  YLTRCP     => YLTRCP9
  YLTCTY     => NULL ()
  YLTHW      => YLTHW9
  YLTXYB     => YLTXYB9
  YLTXYB_PHY => YLTXYB9_PHY
ENDIF
#:endif

#:if use_llmf_phys
LLMF_PHYS = .FALSE.
IF (PRESENT (LDMF_PHYS)) THEN
  LLMF_PHYS = LDMF_PHYS
ENDIF
#:endif

#:for var in vars
  #:set elt = vars[var]
  #:if not elt[NCOND] is None
    #:set ind = "  "
IF (${elt[NCOND]}$) THEN
  #:else
    #:set ind = ""
  #:endif
  #:if (elt[NTYPE] is None) or (elt[NTYPE] == 'INTEGER')
    #:if elt[ISARG]
${ind}$IF (PRESENT (${argn (var)}$)) THEN
${ind}$  SELF%F_${var}$ => CREATE_FIELD_WRAP ('${var}$', ${argn (var)}$)
      #:if elt[ELARG]
${ind}$ELSE
$:temporary (var, elt[NDIMS], ind + "  ", elt[NTYPE])
      #:endif
${ind}$ENDIF
    #:else
$:temporary (var, elt[NDIMS], ind + "", elt[NTYPE])
    #:endif
  #:elif (NDEFS < len (elt)) and (elt[NDEFS] is not None)
    #:set defs = elt[NDEFS]
    #:if elt[ISARG]
${ind}$CALL SELF%${var}$%INIT (REGISTRY, ${nlev}$, ${defs}$, PERSISTENT, ${argn (var)}$)
    #:else
${ind}$CALL SELF%${var}$%INIT (REGISTRY, ${nlev}$, ${defs}$, PERSISTENT)
    #:endif
  #:else
    #:if (var == "T0") or (var == "T9")
      #:set kt = var[1] + ", "
    #:else
      #:set kt = ""
    #:endif
    #:if elt[ISARG]
${ind}$CALL SELF%${var}$%INIT (${kt}$REGISTRY, ${nlev}$, PERSISTENT, ${argn (var)}$)
    #:else
${ind}$CALL SELF%${var}$%INIT (${kt}$REGISTRY, ${nlev}$, PERSISTENT)
    #:endif
  #:endif
  #:if not elt[NCOND] is None
ENDIF
  #:endif

